{
  "crons": [
    {
      "path": "/api/cron/daily?task=daily&secret=$CRON_SECRET",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/daily?task=hourly&secret=$CRON_SECRET",
      "schedule": "0 * * * *"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "JWT_SECRET": "@jwt_secret",
    "PAYSTACK_SECRET_KEY": "@paystack_secret_key",
    "CRON_SECRET": "@cron_secret"
  }
}
