# Application Configuration
VITE_APP_NAME=Ajo Secure
VITE_APP_URL=http://localhost:5173

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Payment Gateway Configuration (Example: Paystack)
VITE_PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxx
VITE_PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxx

# Email Service Configuration (Example: SendGrid)
VITE_EMAIL_SERVICE=sendgrid
VITE_SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VITE_EMAIL_FROM=noreply@ajosecure.com

# SMS Service Configuration (Example: Twilio)
VITE_SMS_SERVICE=twilio
VITE_TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VITE_TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VITE_TWILIO_PHONE_NUMBER=+1234567890

# Security Configuration
VITE_SESSION_TIMEOUT=3600000
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_LOCKOUT_DURATION=900000

# Feature Flags
VITE_ENABLE_KYC=true
VITE_ENABLE_BVN_VERIFICATION=true
VITE_ENABLE_EMAIL_VERIFICATION=true
VITE_ENABLE_PHONE_VERIFICATION=true

# Monitoring and Analytics (Example: Sentry)
VITE_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@o000000.ingest.sentry.io/0000000
VITE_ENVIRONMENT=development

# Database Configuration (Backend)
# Option 1: Use Supabase connection string (recommended for cloud)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Option 2: Use individual parameters (for local PostgreSQL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ajo_secure
# DB_USER=postgres
# DB_PASSWORD=your_password

REDIS_URL=redis://localhost:6379

# JWT Configuration (Backend)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key
REFRESH_TOKEN_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
