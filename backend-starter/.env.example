# ==============================================
# AJO SECURE BACKEND - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ajo_secure
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=generate-a-random-64-character-string-here
REFRESH_TOKEN_SECRET=generate-another-random-64-character-string-here
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Password Security
BCRYPT_ROUNDS=12

# Paystack Configuration
PAYSTACK_SECRET_KEY=sk_test_your_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@ajosecure.com
EMAIL_FROM_NAME=Ajo Secure

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Business Rules
DEFAULT_SERVICE_FEE_PERCENTAGE=10
PENALTY_RATE_PER_DAY=0.05
